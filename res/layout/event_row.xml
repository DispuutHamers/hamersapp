<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="?android:attr/listPreferredItemHeight"
                android:padding="0dp">

    <TextView
            android:id="@+id/event_title"
            android:layout_width="fill_parent"
            android:layout_height="24dp"
            android:layout_marginStart="4dp"
            android:layout_marginLeft="4dp"
            android:layout_alignWithParentIfMissing="true"
            android:gravity="left"
            android:text="Dit is een keileuke activiteit (testing purposes)"
            android:textSize="18dp"
            android:layout_alignTop="@+id/event_date"/>

    <TextView
            android:id="@+id/event_beschrijving"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:layout_marginLeft="4dp"
            android:paddingTop="-2dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Dit is de beschrijving (testing purposes)"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_below="@+id/event_title"
            android:textStyle="italic"/>

    <TextView
            android:id="@+id/event_date"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:ellipsize="marquee"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:singleLine="true"
            android:text="Dit is de datum (testing purposes)"
            android:textSize="12sp"
            android:gravity="right"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

</RelativeLayout>