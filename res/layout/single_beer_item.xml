<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/buttonLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="fill_parent">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView android:id="@+id/beer_name"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="25sp"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:padding="20dp"
                          android:text="Biertje"
                          android:gravity="center_horizontal"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/beer_image"
                        android:padding="0dp"
                        android:layout_gravity="center_horizontal"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Soort: "
                            android:id="@+id/beer_soort_textview"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="Scotch Ale"
                            android:id="@+id/beer_soort"
                            android:textSize="16dp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="ALC: "
                            android:id="@+id/beer_alc_textview"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="8%"
                            android:id="@+id/beer_alc"
                            android:textSize="16dp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Brouwer: "
                            android:id="@+id/beer_brouwer_textview"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="John Martin"
                            android:id="@+id/beer_brewer"
                            android:textSize="16dp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="20dp">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Land: "
                            android:id="@+id/beer_country_textview"
                            android:textSize="18sp"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="BE"
                            android:id="@+id/beer_country"
                            android:textSize="16dp"
                            android:gravity="right"/>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@android:color/darker_gray"/>
                <TextView android:id="@+id/reviews_tv"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="22sp"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:paddingLeft="20dp"
                          android:paddingRight="20dp"
                          android:text="Reviews:"
                          android:gravity="left"
                          android:layout_marginTop="5dp"/>
                <nl.ecci.Hamers.Helpers.ExpandedListView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:id="@+id/reviews"
                        android:drawSelectorOnTop="false"
                        android:listSelector="@android:color/transparent"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:scrollbars="none"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
            android:id="@id/buttonLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="5dp">

        <Button
                android:id="@+id/sendreview_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="@string/new_review"
                android:onClick="createReview"/>
    </LinearLayout>
</RelativeLayout>