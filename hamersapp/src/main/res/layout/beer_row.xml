<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="0dp"
                android:clickable="true"
                android:background="?attr/selectableItemBackground">

    <ImageView
            android:id="@+id/beer_image"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="6dip"
            android:contentDescription="TODO"
            android:padding="0dp"
            android:layout_alignParentLeft="true"/>

    <TextView
            android:id="@+id/beer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_toRightOf="@id/beer_image"
            android:gravity="start"
            android:textSize="16sp"
            android:textColor="@android:color/primary_text_light"/>

    <TextView
            android:id="@+id/beer_soort"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Dit is de soort (testing purposes)"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_below="@id/beer_name"
            android:layout_toRightOf="@id/beer_image"
            android:layout_toEndOf="@id/beer_image"
            android:textColor="@android:color/secondary_text_light"/>

    <TextView
            android:id="@+id/beer_brewer"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="Dit is de brouwer (testing purposes)"
            android:textSize="12sp"
            android:gravity="left"
            android:layout_below="@id/beer_soort"
            android:layout_toRightOf="@+id/beer_image"
            android:layout_toEndOf="@id/beer_image"
            android:textColor="@android:color/secondary_text_light"/>

    <TextView android:id="@+id/row_beer_rating"
              android:layout_width="fill_parent"
              android:layout_height="16dp"
              android:ellipsize="marquee"
              android:singleLine="true"
              android:text="RATING"
              android:textSize="12sp"
              android:gravity="left"
              android:layout_below="@id/beer_brewer"
              android:layout_toRightOf="@+id/beer_image"
              android:layout_toEndOf="@id/beer_image"
              android:textColor="@android:color/secondary_text_light"/>

    <TextView
            android:id="@+id/beer_info"
            android:layout_width="fill_parent"
            android:layout_height="18dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/user_image"
            android:layout_marginEnd="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="INFO"
            android:textSize="14sp"
            android:gravity="right"
            android:textStyle="italic"
            android:textColor="@android:color/tertiary_text_light"/>
</RelativeLayout>