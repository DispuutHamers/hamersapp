<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="?attr/selectableItemBackground"
    android:clickable="true"
    android:padding="0dp">

    <ImageView
        android:id="@+id/beer_image"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dip"
        android:layout_marginRight="6dip"
        android:padding="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/beer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/beer_image"
        android:layout_toRightOf="@id/beer_image"
        android:gravity="start"
        android:textColor="?android:attr/textColorPrimary"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/beer_soort"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_below="@id/beer_name"
        android:layout_toEndOf="@id/beer_image"
        android:layout_toRightOf="@id/beer_image"
        android:ellipsize="marquee"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/beer_brewer"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_below="@id/beer_soort"
        android:layout_toEndOf="@+id/beer_image"
        android:layout_toRightOf="@+id/beer_image"
        android:ellipsize="marquee"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/row_beer_rating"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_below="@id/beer_brewer"
        android:layout_toEndOf="@+id/beer_image"
        android:layout_toRightOf="@+id/beer_image"
        android:ellipsize="marquee"
        android:gravity="start"
        android:maxLines="1"
        android:textColor="?android:attr/textColorSecondary"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/beer_info"
        android:layout_width="fill_parent"
        android:layout_height="18dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:ellipsize="marquee"
        android:gravity="end"
        android:maxLines="1"
        android:textColor="?android:attr/textColorTertiary"
        android:textSize="14sp"
        android:textStyle="italic" />
</RelativeLayout>