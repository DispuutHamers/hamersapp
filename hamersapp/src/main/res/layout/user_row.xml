<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="0dp">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="6dip"
        android:contentDescription="TODO"
        android:padding="0dp"
        android:layout_alignParentLeft="true"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="2dp"
        android:layout_above="@id/quote_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_toRightOf="@id/user_image"
        android:gravity="left"
        android:text="User (testing purposes)"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/primary_text_light" />

    <TextView
        android:id="@+id/user_quotecount"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:singleLine="true"
        android:text="Quotes: 0"
        android:layout_marginBottom="2dp"
        android:textSize="14sp"
        android:gravity="right"
        android:layout_toRightOf="@+id/user_image"
        android:layout_above="@+id/user_reviewcount"
        android:layout_alignRight="@+id/user_reviewcount"
        android:layout_alignEnd="@+id/user_reviewcount"
        android:textStyle="italic"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginRight="2dp" />

    <TextView
        android:id="@+id/user_reviewcount"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Reviews: 0"
        android:textSize="14sp"
        android:gravity="right"
        android:paddingRight="2dp"
        android:layout_marginBottom="4dp"
        android:layout_alignBottom="@+id/username"
        android:layout_toRightOf="@+id/user_image"
        android:layout_toEndOf="@+id/user_image"
        android:textStyle="italic"
        android:textColor="@android:color/secondary_text_light"
        android:layout_marginRight="8dp" />

</RelativeLayout> 