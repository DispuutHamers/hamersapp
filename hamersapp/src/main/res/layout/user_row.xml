<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="?android:attr/listPreferredItemHeight"
    android:padding="0dp"
    android:scrollIndicators="none">

    <ImageView
        android:id="@+id/user_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dip"
        android:layout_marginRight="6dip"
        android:padding="0dp"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/username"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/quote_date"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_marginLeft="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:layout_toEndOf="@id/user_image"
        android:layout_toRightOf="@id/user_image"
        android:gravity="start"
        android:textColor="@android:color/primary_text_light"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/user_quotecount"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_above="@+id/user_reviewcount"
        android:layout_alignEnd="@+id/user_reviewcount"
        android:layout_alignRight="@+id/user_reviewcount"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/user_image"
        android:layout_toRightOf="@+id/user_image"
        android:gravity="end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/user_reviewcount"
        android:layout_width="fill_parent"
        android:layout_height="16dp"
        android:layout_alignBottom="@+id/username"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/user_image"
        android:layout_toRightOf="@+id/user_image"
        android:ellipsize="marquee"
        android:gravity="end"
        android:paddingLeft="2dp"
        android:paddingRight="2dp"
        android:singleLine="true"
        android:textColor="@android:color/secondary_text_light"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout> 