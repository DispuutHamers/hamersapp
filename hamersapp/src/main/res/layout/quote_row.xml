<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/quote_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="6dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="6dp"
        android:layout_marginStart="0dp"
        android:padding="0dp"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/quote_layout"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="4dp"
        android:layout_marginRight="4dp"
        android:layout_toEndOf="@id/quote_image"
        android:layout_toRightOf="@id/quote_image"
        android:orientation="vertical">

        <TextView
            android:id="@+id/quote_body"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:gravity="start"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/quote_layout"
        android:layout_gravity="bottom"
        android:layout_toEndOf="@id/quote_image"
        android:layout_toRightOf="@id/quote_image"
        android:gravity="bottom"
        android:orientation="horizontal"
        android:paddingBottom="2dp">

        <TextView
            android:id="@+id/quote_user"
            android:layout_width="wrap_content"
            android:layout_height="16dp"
            android:gravity="start"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/quote_date"
            android:layout_width="fill_parent"
            android:layout_height="16dp"
            android:ellipsize="marquee"
            android:gravity="end"
            android:paddingEnd="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingStart="5dp"
            android:maxLines="1"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="12sp" />
    </LinearLayout>
</RelativeLayout>