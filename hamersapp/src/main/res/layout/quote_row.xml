<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

    <ImageView
            android:id="@+id/quote_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginRight="6dp"
            android:padding="0dp"
            android:layout_alignParentLeft="true"/>

    <RelativeLayout
            android:id="@+id/quote_layout"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/quote_image"
            android:layout_toEndOf="@id/quote_image" android:layout_marginRight="4dp">

        <TextView
                android:id="@+id/quote_body"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginStart="2dp"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="2dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_alignWithParentIfMissing="true"
                android:ellipsize="end"
                android:text="Dit is een keigoeie quote (testing purposes)"
                android:textSize="16sp"
                android:gravity="left"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/primary_text_light"/>
    </RelativeLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/quote_image"
            android:layout_below="@id/quote_layout"
            android:layout_toRightOf="@id/quote_image"
            android:paddingBottom="2dp"
            android:layout_alignParentBottom="true"
            android:gravity="bottom"
            android:layout_gravity="bottom">

        <TextView
                android:id="@+id/quote_user"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:singleLine="true"
                android:text="Dit is de user"
                android:textSize="12sp"
                android:gravity="left"
                android:layout_above="@+id/quote_date"
                android:textColor="@android:color/secondary_text_light"/>

        <TextView
                android:id="@+id/quote_date"
                android:layout_width="fill_parent"
                android:layout_height="16dp"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:text="Dit is de datum"
                android:textSize="12sp"
                android:gravity="right"
                android:paddingEnd="5dp"
                android:paddingRight="5dp"
                android:textColor="@android:color/secondary_text_light"/>
    </LinearLayout>
</RelativeLayout>