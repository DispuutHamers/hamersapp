<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/single_event_parent"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
            android:id="@+id/single_event_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/buttonLayout">
        <LinearLayout
                android:id="@+id/single_event_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="2dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white">

                <LinearLayout android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content">

                    <TextView android:id="@+id/event_title"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="25sp"
                              android:textAppearance="?android:attr/textAppearanceLarge"
                              android:textColor="@android:color/primary_text_light"
                              android:focusable="false"
                              android:paddingTop="8dp"
                              android:paddingLeft="16dp"
                              android:paddingRight="16dp"
                              android:paddingBottom="8dp"
                              android:layout_marginBottom="5dp"
                              android:gravity="center_horizontal"/>

                    <include layout="@layout/divider"/>

                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content">

                        <include
                                android:id="@+id/row_date"
                                layout="@layout/row_imageview"/>

                        <include layout="@layout/divider"/>

                        <include
                                android:id="@+id/row_location"
                                layout="@layout/row_imageview"/>

                        <include layout="@layout/divider"/>

                    </LinearLayout>

                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:paddingLeft="16dp"
                                  android:paddingRight="16dp">

                        <include
                                android:id="@+id/row_description"
                                layout="@layout/row_detailview"/>

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="2dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white">

                <LinearLayout android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingBottom="12dp">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/primary_text_light"
                            android:paddingTop="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp"
                            android:layout_marginBottom="5dp"
                            android:text="Aanwezig"/>

                    <include layout="@layout/divider"/>

                    <LinearLayout
                            android:id="@+id/aanwezig_insert_point"
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    card_view:cardCornerRadius="2dp"
                    android:layout_margin="5dp"
                    android:background="@android:color/white">

                <LinearLayout android:orientation="vertical"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:paddingBottom="12dp">
                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/primary_text_light"
                            android:paddingTop="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp"
                            android:layout_marginBottom="5dp"
                            android:text="Afwezig"/>

                    <include layout="@layout/divider"/>

                    <LinearLayout
                            android:id="@+id/afwezig_insert_point"
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"/>

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <LinearLayout
                    android:id="@+id/aanwezig_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    >
                <Button
                        android:id="@+id/aanwezig_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="@string/event_aanwezig_button"
                        android:onClick="setAanwezig"/>
                <Button
                        android:id="@+id/afwezig_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="@string/event_afwezig_button"
                        android:onClick="setAfwezig"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>