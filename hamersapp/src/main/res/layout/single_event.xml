<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/single_event_root"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <ScrollView
            android:id="@+id/single_event_scrollview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@id/buttonLayout">
        <LinearLayout
                android:id="@+id/single_event_layout"
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <TextView android:id="@+id/event_title"
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:textSize="25sp"
                      android:textAppearance="?android:attr/textAppearanceLarge"
                      android:paddingBottom="0dp"
                      android:padding="20dp"
                      android:text="Acvititeit"
                      android:focusable="false"
                      android:gravity="center_horizontal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/event_date"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:id="@+id/event_location"
                    android:focusable="false"
                    android:textSize="16sp"
                    android:layout_gravity="center_horizontal"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Activiteit info"
                    android:id="@+id/event_beschrijving"
                    android:focusable="false"
                    android:textSize="18sp"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/event_aanwezig"
                    android:id="@+id/event_aanwezig_tv"/>
            <nl.ecci.Hamers.Helpers.ExpandedListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/event_aanwezig"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="18sp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="5dp"
                    android:text="@string/event_afwezig"
                    android:id="@+id/event_afwezig_tv"/>
            <nl.ecci.Hamers.Helpers.ExpandedListView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/event_afwezig"
                    android:drawSelectorOnTop="false"
                    android:listSelector="@android:color/transparent"
                    android:scrollbars="none"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"/>
            <LinearLayout
                    android:id="@+id/aanwezig_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="5dp">
                <Button
                        android:id="@+id/aanwezig_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="@string/event_aanwezig_button"
                        android:onClick="setAanwezig"/>
                <Button
                        android:id="@+id/afwezig_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="@string/event_afwezig_button"
                        android:onClick="setAfwezig"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>