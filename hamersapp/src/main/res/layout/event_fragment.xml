<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/event_fragment_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/events_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/events_recyclerview"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:clickable="true"
            android:paddingLeft="8dp"
            android:paddingRight="8dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/beer_add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:clickable="true"
        android:onClick="newEvent"
        android:src="@drawable/action_add"
        app:backgroundTint="@color/material_red"
        app:layout_anchor="@id/events_recyclerview"
        app:layout_anchorGravity="bottom|right|end"
        app:layout_behavior="nl.ecci.hamers.helpers.ScrollAwareFABBehavior" />

</android.support.design.widget.CoordinatorLayout>