<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/single_beer_parent"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <include layout="@layout/toolbar"/>

    <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_above="@+id/buttonLayout">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingBottom="12dp">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <TextView android:id="@+id/beer_name"
                          android:layout_width="fill_parent"
                          android:layout_height="wrap_content"
                          android:textSize="25sp"
                          android:textAppearance="?android:attr/textAppearanceLarge"
                          android:padding="20dp"
                          android:text="Biertje"
                          android:gravity="center_horizontal"/>
                <ImageView
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:maxHeight="100dp"
                        android:id="@+id/beer_image"
                        android:padding="0dp"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="16dp"
                        android:transitionName="@string/transition_single_image"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Soort: "
                            android:id="@+id/beer_soort_textview"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/beer_soort"
                            android:textSize="16sp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="ALC: "
                            android:id="@+id/beer_alc_textview"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/beer_alc"
                            android:textSize="16sp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:id="@+id/beer_brouwer_textview"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/beer_brewer"
                            android:textSize="16sp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Land: "
                            android:id="@+id/beer_country_textview"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/beer_country"
                            android:textSize="16sp"
                            android:gravity="right"/>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Gemiddelde cijfer: "
                            android:id="@+id/beer_rating_textview"
                            android:textSize="18sp"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:id="@+id/beer_rating"
                            android:textSize="16sp"
                            android:gravity="right"/>
                </LinearLayout>

                <android.support.v7.widget.CardView
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        card_view:cardCornerRadius="2dp"
                        android:layout_margin="5dp"
                        android:background="@android:color/white">

                    <LinearLayout android:orientation="vertical"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:paddingBottom="12dp">

                    <TextView
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textColor="@android:color/primary_text_light"
                            android:paddingTop="8dp"
                            android:paddingLeft="16dp"
                            android:paddingRight="16dp"
                            android:paddingBottom="8dp"
                            android:layout_marginBottom="5dp"
                            android:text="Reviews"/>

                        <include layout="@layout/divider"/>

                        <LinearLayout
                                android:id="@+id/review_insert_point"
                                android:orientation="vertical"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <Button
                        android:id="@+id/sendreview_button"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_gravity="bottom"
                        android:layout_weight="1"
                        android:text="@string/new_review"
                        android:onClick="createReview"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>